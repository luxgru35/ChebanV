{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@models/*": [
                "models/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@middleware/*": [
                "middleware/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@routes/*": [
                "routes/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}